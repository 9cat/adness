<% layout('sblayout') %>
<div class="content-page col-sm-12">
  
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">
          <strong>Approved Ads</strong>
        </a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="/admin/ads/factoids">Factoids</a>
          </li>
          <li>
            <a href="/admin/ads/reserved">Reserved Ads</a>
          </li>
          <li>
            <a href="/admin/ads/review">Needs Review</a>
          </li>
          <li>
            <a href="/admin/ads/approved">Approved Ads</a>
          </li>
          <li>
            <a href="/admin/ads/rejected">Rejected Ads</a>
          </li>
          <li>
            <a href="/admin/invoices">Auction Invoices</a>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <% if (ads.length > 0) { %>
    <% ads.forEach(function(ad) { %>
  
      <div class="panel panel-success"> 
        <div class="panel-heading">
          <div class="row">
            <div class="col-sm-6">
              <a href="<%= browsePrefix %>/ads/<%= ad.userId%>" class="ad_link_left">
                <%= ad.username %>
              </a>
            </div>
            <div class="col-sm-6">
              <a href="https://bitcointalk.org/index.php?action=profile;u=<%= ad.userId %>;sa=showPosts" class="ad_link_right">
                <%= ad.username %>'s Posts
              </a>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <% include ads/show %>
        </div>
        <div class="panel-footer clearfix">
          <div class="pull-right">
            <% if (ad.approved === true) { %>
              <div class="btn-group">
                <button class="btn btn-danger" onclick="rejectAd(event, '<%= ad._id %>');">
                  Reject
                </button>
              </div>
            <% } else if (ad.rejected === true ) { %>
              <div class="btn-group">
                <button class="btn btn-success" onclick="approveAd(event, '<%= ad._id %>');">
                  Approve
                </button>
              </div>
            <% } else { %>
              <div class="btn-group">
                <button class="btn btn-success" onclick="approveAd(event, '<%= ad._id %>');">
                  Approve
                </button>
              </div>
              <div class="btn-group">
                <button class="btn btn-danger" onclick="rejectAd(event, '<%= ad._id %>');">
                  Reject
                </button>
              </div>
            <% } %>
          </div>
        </div>
      </div>
        
    <% }) %>
  <% } %>

</div>

<script type="text/javascript">
  function approveAd(ev, adId) {
    ev.preventDefault();
    $.post("<%= browsePrefix %>/ads/" + adId + "/approve", 
      function(data) { location.reload(); });
  }

  function rejectAd(ev, adId) {
    ev.preventDefault();
    $.post("<%= browsePrefix %>/ads/" + adId + "/reject",
      function(data) { location.reload(); });
  }
</script>
