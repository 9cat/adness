  <body>
    <div class="container" ng-controller="MainCtrl">
      <div class="header">
        <ul class="nav nav-pills pull-right">
          <li><a href="/login">Login</a></li>
        </ul>
        <h3 class="text-muted">Adness</h3>
      </div>
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Round X</div>
        
        <div class="panel-body">
          <!-- Table -->
          <table class="table table-striped">
            <thead>
              <tr>
                <th>User</th>
                <th>Desired Ad Slots</th>
                <th>Bid Per Slot (BTC)</th>
                <th>Total Bid (BTC)</th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="bid in bids" ng-cloak>
                <td>{{bid.username}}</td>
                <td>{{bid.slots}}</td>
                <td>{{bid.btc_per_slot}}</td>
                <td>{{bid.slots * bid.btc_per_slot}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="footer">
        <p>---</p>
      </div>
    </div> <!-- /container -->

