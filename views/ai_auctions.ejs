<% layout('sblayout') %>
<div class="content-page col-sm-12">

  <!-- admin navigation bar -->
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <span class="navbar-brand">
          <strong>Auction Invoices</strong>
        </span>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% include admin_nav %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="panel panel-default"> 
    <div class="panel-heading">
      <b>Finished Auctions </b><em>(Sorted by End Time)</em>
    </div>
    <div class="panel-body">
      <% for (var i = 0; i < auctionsPast.length; i++) { %>
        <div class="row auction_listing">

          <div class="col-sm-12">
            <span class="auction_header">Auction: </span>
            <a href="/admin/invoices/<%= auctionsPast[i]._id %>">
              <%= auctionsPast[i]._id %>
            </a>
          </div>

          <div class="col-sm-6">
            <span class="auction_header">Start: </span>
            <span><%= auctionsPast[i].start %></span>
            <br>
            <span class="auction_header">End: </span>
            <span><%= auctionsPast[i].end %></span>
          </div>

          <div class="col-sm-6">
            <span class="auction_header">Ads Start: </span>
            <span><%= auctionsPast[i].adsStart %></span>
            <br>
            <span class="auction_header">Ads End: </span>
            <span><%= auctionsPast[i].adsEnd %></span>
          </div>
        </div>
      <% } %>
    </div>
  </div>

</div>
