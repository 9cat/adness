<% layout('sblayout') %>

<div class="content-page col-sm-12">

  <% include _registration_status %>
  <% if (auction.open) { %>
      <strong>
        Reminder: For each region in an auction, at least one approved ad for that region is also necessary to bid.
      </strong>
    </div>
  <% } %>

  <% include auctions/auction_show %>

  <br /><br />

  <% if (bids) { %>

    <% for (var region in bids) { %>

      <div class="panel panel-default">
        <div class="panel-heading">
          <b><%= region %> Bid History:</b>
        </div>

        <div class="panel-body">
          <% for (var i=0; i < bids[region].length; i++) { %>
            <div class="slot">
              <div class="row">
                <div class="col-sm-12">
                  ID: <strong><%= bids[region][i]._id %></strong>
                  <% if (bids[region][i].invalid === true) { %>
                    <span class="text-danger"><strong>INVALIDATED</strong></span>
                  <% } %>
                  <br>
                  Date/Time: <span class="date"><%= bids[region][i].created_at %></span>
                </div>
              </div>
              <div class="row text-center">
                <div class="col-sm-4 truncate">
                  User: 
                  <a href="<%= browsePrefix %>/users/<%= bids[region][i].user.userId %>">
                    <%= bids[region][i].user.username %>
                  </a>
                  <br>
                </div>
                <div class="col-sm-4">
                  Slots: <%= bids[region][i].slots %><br>
                </div>
                <div class="col-sm-4">
                  Price: <%= bids[region][i].price %><br>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>

  <% } %>

</div>
