<% layout('sblayout') %>
<div class="content-page col-sm-offset-1 col-sm-10">

  <h3>
    <% if(auction.open) { %>
      <span class="label label-success">Open</span>
    <% } else { %>
      <% if (auction.start > new Date().getTime()) { %>
        <span class="label label-primary">Upcoming</span>
      <% } else if (auction.end < new Date().getTime()) { %>
        <span class="label label-default">Past</span>
      <% } else { %>
        <span class="label label-danger">Closed</span>
      <% } %>
    <% } %>
    <%= auction._id %>
  </h3>

  <div class="row">

    <div class="col-sm-6 slot_text">
      Auction Start Time: 
      <br>
      <%= new Date(auction.start) %>
    </div>

    <div class="col-sm-6 slot_text">
      Auction End Date: 
      <br>
      <%= new Date(auction.end) %>
    </div>

  </div>

  <br>
  <b>Ad Slot Results</b>
  <br>

  <% for(var i=0; i < auction.bidPerSlot.length; i++) { %>

    <div class="slot slot_text">
      <div class="row">
        <div class="col-sm-3">Ad Slot #<%= i+1 %></div>
        <div class="col-sm-6"><%= auction.bidPerSlot[i].user.username %></div>
        <div class="col-sm-3"><%= auction.bidPerSlot[i].price %> BTC</div>
      </div>
    </div>

  <% } %>

  <% if (auction.bidPerSlot.length === 0) { %>
    <div class="slot slot_text">
      No Slots filled
    </div>
  <% } %>


  <% if (bids.length > 0) { %>
    <br>
    <b>Bid History:</b>
    <br>
  <% } %>  

  <% for (var i=0; i < bids.length; i++) { %>
    <div class="slot">
      <div class="row">
        <div class="col-sm-12">
          ID: <%= bids[i]._id %><br>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          User: <%= bids[i].user.username %><br>
        </div>
        <div class="col-sm-3">
          Price: <%= bids[i].price %><br>
        </div>
        <div class="col-sm-3">
          Slots: <%= bids[i].slots %><br>
        </div>
        <div class="col-sm-3">
          <%= new Date(bids[i].created_at) %>
        </div>
      </div>
    </div>
  <% } %>

  
</div>