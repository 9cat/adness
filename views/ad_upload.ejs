    <!-- Main Content -->
    <div class="upload-header">
      <h1>Bitcoin Talk Ad Uploader</h1>
    </div>

    <div class="container-fluid bootstrap-fluid-fix">
      <div class="row coding-section">
        <div class="col-sm-offset-3 col-sm-6 well">
            <div style="padding-bottom: 20px;">
              Add your Ad HTML/CSS below:
            </div>
            <textarea name="upload-code" id="upload-code" rows="3"></textarea>
            <div style="padding-top: 20px;">
              <button class="btn btn-primary"onclick="convert();">Preview</button>
            </div>
        </div>
      </div>

      <div id="preview-text" class="row review-section" style="display: none;">
        <div class="col-sm-offset-3 col-sm-6">
          This is what your add will look like on the page:</br>
        </div>
      </div>

      <div id="preview-container" class="row review-section" style="display: none;">
        <div class="col-sm-offset-3 col-sm-6 well">
          <div id="preview"></div>
          <div style="padding-top: 20px;">
            <button class="btn btn-primary pull-right"onclick="submitForReview();">Submit for Review</button>
          </div>
        </div>
      </div>
    </div>


