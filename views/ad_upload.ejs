    <!-- custom scripts -->
    <script>
      var textArea = document.getElementById("upload-code");
      var myCodeMirror = CodeMirror.fromTextArea(textArea, {
        mode:  "htmlmixed",
        indentWithTabs: false,
        tabSize: 2,
        lineNumbers: true
      });
      myCodeMirror.setSize(null, 150);
      // on change event that maxes the number of lines to three
      myCodeMirror.on(
        "change", function(cm, change) { convert(); }
      )

      function convert() {
        // show the preview text
        document.getElementById('preview-text').style.display = "block";
        document.getElementById('preview-container').style.display = "block";

        // scrub the raw html for any security leaks
        var raw_html = myCodeMirror.getValue();
        function urlX(url) { if(/^https?:\/\//.test(url)) { return url }}
        function idX(id) { return id }
        var parsedHtml = html_sanitize(raw_html, urlX, idX);

        // inject the parsed html into the page
        var preview = document.getElementById('preview');
        preview.innerHTML = parsedHtml;
      }

      function submitForReview() {
        // submit parsed HTML to backend
        alert('submitted');
      }
    </script>
