<% layout('sblayout') %>
<div class="content-page col-sm-12">
  
  <!-- admin navigation bar -->
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-brand">
          <strong>Needs Review</strong>
        </span>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <% include admin_nav %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <% if (ads.length > 0) { %>
    <% ads.forEach(function(ad) { %>
  
      <div class="panel panel-warning"> 
        <div class="panel-heading">
          <div class="row">
            <div class="col-sm-6">
              <a href="<%= browsePrefix %>/ads/<%= ad.userId%>" class="ad_link_left">
                <%= ad.username %>
              </a>
            </div>
            <div class="col-sm-6">
              <a href="https://bitcointalk.org/index.php?action=profile;u=<%= ad.userId %>;sa=showPosts" class="ad_link_right">
                <%= ad.username %>'s Posts
              </a>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <% include ads/show %>
        </div>
        <div class="panel-footer clearfix">
          <div class="pull-right">
            <% if (ad.approved === true) { %>
              <div class="btn-group">
                <button class="btn btn-danger rejectAd" data-id="<%= ad._id %>">
                  Reject
                </button>
              </div>
            <% } else if (ad.rejected === true ) { %>
              <div class="btn-group">
                <button class="btn btn-success approveAd" data-id="<%= ad._id %>">
                  Approve
                </button>
              </div>
            <% } else { %>
              <div class="btn-group">
                <button class="btn btn-success approveAd" data-id="<%= ad._id %>">
                  Approve
                </button>
              </div>
              <div class="btn-group">
                <button class="btn btn-danger rejectAd" data-id="<%= ad._id %>">
                  Reject
                </button>
              </div>
            <% } %>
          </div>
        </div>
      </div>
        
    <% }) %>
  <% } %>

</div>
