<% layout('sblayout') %>
<div class="content-page col-sm-offset-1 col-sm-10">

  <h3>Admin Tools</h3>

  <div class="panel panel-default"> 
    <div class="panel-heading">
      <b>Add Auction</b>
    </div>
    <div class="panel-body slot_text">
      
      <form role="form" method="post" action="/auctions">
        <div class="col-sm-3">
          Start Date/Time: 
          <input name="startDate" id="startDate" type="date" placeholder="YYYY-MM-DD" class="form-control">
          <input name="startTime" id="startTime" type="time" placeholder="HH:MM AM/PM" class="form-control">
        </div>
        <div class="col-sm-3">
          End Date/Time: 
          <input name="endDate" id="endDate" type="date" placeholder="YYYY-MM-DD" class="form-control">
          <input name="endTime" id="endTime" type="hour" placeholder="HH:MM AM/PM" class="form-control">
        </div>
        <div class="col-sm-3">
          Number of slots:<br>
          <input id="slots" name="slots" type="number" class="form-control" value="8" step="1" min="1" max="8">
        </div>
      </form>
      <div class="col-sm-3 auction_add_button">
        <button class="btn btn-primary btn-block" onclick="submitAuction();">
          Add Auction
        </button>
      </div>

    </div>
  </div>

  <div class="panel panel-success"> 
    <div class="panel-heading">
      <b>Open Scheduled Auctions</b>
    </div>
    <div class="panel-body">
      <% for (var i = 0; i < auctionsOpen.length; i++) { %>
        <div class="row auction_listing">

          <div class="col-sm-12">
            <span class="auction_header">Auction: </span>
            <%= auctionsOpen[i]._id %>
          </div>

          <div class="col-sm-6">
            <span class="auction_header">Start: </span>
            <%= new Date(auctionsOpen[i].start) %>
            <br>
            <span class="auction_header">End: </span>
            <%= new Date(auctionsOpen[i].end) %>
          </div>
          
          <div class="col-sm-3">
            <form role="form" method="post" action="/api/auction/disable/<%=auctionsOpen[i]._id%>">
              <button class="btn btn-primary btn-block" type="submit">
                Close Auction
              </button>
            </form>
          </div>

          <div class="col-sm-3 text-center">
            <a href="<%= browsePrefix %>/auction/<%= auctionsOpen[i]._id %>" class="btn btn-primary btn-block">
              Details
            </a>
          </div>

        </div>
      <% } %>
    </div>
  </div>

  <div class="panel panel-danger"> 
    <div class="panel-heading">
      <b>Closed Scheduled Auctions</b>
    </div>
    <div class="panel-body">
      <% for (var i = 0; i < auctionsClosed.length; i++) { %>
        <div class="row auction_listing">

          <div class="col-sm-12">
            <span class="auction_header">Auction: </span>
            <%= auctionsClosed[i]._id %>
          </div>

          <div class="col-sm-6">
            <span class="auction_header">Start: </span>
            <%= new Date(auctionsClosed[i].start) %>
            <br>
            <span class="auction_header">End: </span>
            <%= new Date(auctionsClosed[i].end) %>
          </div>
          
          <div class="col-sm-3">
            <form role="form" method="post" action="/api/auction/enable/<%=auctionsClosed[i]._id%>">
              <button class="btn btn-primary btn-block" type="submit">
                Open Auction
              </button>
            </form>
          </div>

          <div class="col-sm-3 text-center">
            <a href="<%= browsePrefix %>/auction/<%= auctionsClosed[i]._id %>" class="btn btn-primary btn-block">
              Details
            </a>
          </div>

        </div>
      <% } %>
    </div>
  </div>

  <div class="panel panel-primary"> 
    <div class="panel-heading">
      <b>Future Auctions</b>
    </div>
    <div class="panel-body">
      <% for (var i = 0; i < auctionsFuture.length; i++) { %>
        <div class="row auction_listing">

          <div class="col-sm-12">
            <span class="auction_header">Auction: </span>
            <%= auctionsFuture[i]._id %>
          </div>

          <div class="col-sm-6">
            <span class="auction_header">Start: </span>
            <%= new Date(auctionsFuture[i].start) %>
            <br>
            <span class="auction_header">End: </span>
            <%= new Date(auctionsFuture[i].end) %>
          </div>

          <div class="col-sm-offset-3 col-sm-3 text-center">
            <a href="<%= browsePrefix %>/auction/<%= auctionsFuture[i]._id %>" class="btn btn-primary btn-block">
              Details
            </a>
          </div>

        </div>
      <% } %>
    </div>
  </div>

  <div class="panel panel-default"> 
    <div class="panel-heading">
      <b>Past Auctions</b>
    </div>
    <div class="panel-body">
      <% for (var i = 0; i < auctionsPast.length; i++) { %>
        <div class="row auction_listing">

          <div class="col-sm-12">
            <span class="auction_header">Auction: </span>
            <%= auctionsPast[i]._id %>
          </div>

          <div class="col-sm-6">
            <span class="auction_header">Start: </span>
            <%= new Date(auctionsPast[i].start) %>
            <br>
            <span class="auction_header">End: </span>
            <%= new Date(auctionsPast[i].end) %>
          </div>

          <div class="col-sm-offset-3 col-sm-3 text-center">
            <a href="<%= browsePrefix %>/auction/<%= auctionsPast[i]._id %>" class="btn btn-primary btn-block">
              Details
            </a>
          </div>

        </div>
      <% } %>
    </div>
  </div>

</div>


<div id="deleteAuctionModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Delete Auction?</h4>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this auction?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger">Delete</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
